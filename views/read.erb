<h3>Item List</h3>

<% if @message %>
  <strong><%= @message %></strong>
<% end %>

<li><a href='/create'>Create Item</a></li>

<table>
  <thead>
    <th>Id</th>
    <th>Item name</th>
    <th>Quantity</th>
    <th>Update?</th>
    <th>Destroy?</th>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td><a href='/update/<%= item.id %>'>Update</a></td>
        <td>
          <a href='/destroy/<%= item.id %>'>Destroy</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
